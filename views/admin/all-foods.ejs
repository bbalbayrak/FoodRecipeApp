<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/food.css">
    </head>

    <body>
        <%- include('../includes/navbar.ejs') %>

            <main>
                <% if (food.length > 0) { %>
                    <div class="grid">
                        <% for (let foods of food) { %>
                            <article class="card food-item">
                                <header class="card__header">
                                    <h1 class="food__title">
                                        <%= foods.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= foods.imageUrl %>" alt="<%= foods.title %>">
                                </div>
                                <div class="card__content">
                                    <p class="food__recipe">
                                        <%= foods.recipe %>
                                    </p>
                                </div>
                                <div class="card__content">
                                    <p class="food__recipe"><%= foods.includes %></p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/update-foods/<%= foods._id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-foods" method="POST">
                                        <input type="hidden" value="<%= foods._id %>" name="foodId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Foods Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>