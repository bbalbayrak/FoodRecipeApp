<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/food.css">
</head>

<body>
   <%- include('../includes/navbar.ejs') %>

    <main>
        <form class="food-form" action="/admin/<% if (editing) { %>update-foods<% } else { %>add-foods<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= food.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= food.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="recipe">Recipe</label>
                <textarea name="recipe" id="recipe" rows="5"><% if (editing) { %><%= food.recipe %><% } %></textarea>
            </div>
            <div class="form-control">
                <label for="includes">Includes</label>
                <textarea name="includes" id="includes" rows="5"><% if (editing) { %><%= food.includes %><% } %></textarea>
            </div>       
            <% if (editing) { %>
                <input type="hidden" value="<%= food._id %>" name="foodId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Food<% } else { %>Add Food<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>